<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="bottomNavigationStyle">@style/BottomNavbar</item>
    </style>



    <style name="toolbarStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
    </style>


    // Navbar STYLE
    <!-- Стилизация BottomNavigationView -->
    <style name="BottomNavbar" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Цвет фона навигационного бара -->
        <item name="android:background">#FFFFFF</item>

        <!-- Кастомная стилизация текста через TextAppearance -->
        <item name="itemTextAppearanceActive">@style/BottomNavActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavInactiveTextAppearance</item>
    </style>

    <!-- Активный элемент BottomNavigationView -->
    <style name="BottomNavActiveTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item> <!-- Размер текста для активного элемента -->
        <item name="android:textColor">#2196F3</item> <!-- Цвет текста для активного элемента -->
    </style>

    <!-- Неактивный элемент BottomNavigationView -->
    <style name="BottomNavInactiveTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item> <!-- Размер текста для неактивного элемента -->
        <item name="android:textColor">#3A3A3A</item> <!-- Цвет текста для неактивного элемента -->
    </style>








    // Toolbar STYLE
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/primary_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item> <!-- Укажите нужный размер -->
        <item name="android:textColor">@color/white</item> <!-- Цвет текста -->
    </style>

</resources>

